<% question.entries.each_with_index do |e, idx| %>
  <div>
    <%= builder.radio_button :question_pair_id, e.id, :title => t('pages.views.required') %>
    <%= builder.label :question_pair_id, e.label %>
  </div>
<% end %>
<%- if question.other %>
  <div class="other">
    <%= builder.radio_button :question_pair_id, question.other.id %>
    <%= builder.label :question_pair_id, question.other.label %><br/>
    <%= builder.text_area :text_value, :rows => 4, :cols => 80, :title => t('pages.views.content_required')  %>
  </div>
<%- end %>
<%
content_for :rules do
  "'#{builder.object_name}[question_pair_id]': 'required',"
end
%>
