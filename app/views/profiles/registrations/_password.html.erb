<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <ul>
    <%= devise_error_messages! %>

  <%# removed to disable email changing%>
    <!--<p><%#= f.label :email %><br />
  <%#= f.text_field :email %></p>
    -->
    <li>
      <%= t('devise.views.new_password') %>
      <ul>
        <li><%= f.password_field :password, :class=>:'text-input short-input' %></li>
      </ul>
    </li>

    <li>
      <%= t('devise.views.confirm_new_password') %>
      <ul>
        <%= f.password_field :password_confirmation, :class=>:'text-input short-input' %>
      </ul>
    </li>

    <li>
      <%= t('devise.views.current_password') %>
      <ul>
        <li><%= f.password_field :current_password, :class=>:'text-input short-input' %></li>
      </ul>
    </li>

  </ul>
  <hr class="sub-hr"/>
  <%= f.submit t('views.update'), :class=>:submission %>
  <%= link_to t('views.cancel'), dashboard_url, :class => 'ui-button ui-widget ui-state-default ui-corner-all' %>
<% end %>

