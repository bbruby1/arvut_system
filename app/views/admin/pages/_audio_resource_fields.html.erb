<li class="asset <%= name.downcase %>">
  <fieldset>
    <%= render 'asset_fields', :name => name, :f_asset => f_res, :resource_type => 'audio_resource'%>
    <%
    # From helper => new, from render => existing
    resource ||= AudioResource.new
  %>
    <%= f_res.fields_for :resource, resource do |f_audio| %>
      <%= f_audio.hidden_field :language_id, :value => @page.language.id %>
      <%= f_audio.label :name, 'Name' %>
      <%= f_audio.text_field :name, :class => 'title span-17 last' %>
      <%= f_audio.label :description, 'Description', :class => 'text' %>
      <%= f_audio.cktext_area :description, :toolbar => ckeditor_toolbar, :class => 'span-17 last', :width => '650px', :height => '6em' %>
      <%= f_audio.label :embed, 'Embed string' %>
      <%= f_audio.text_area :embed, :class => 'title span-17 last', :style => 'height:4em;' %>
      <%= f_audio.label :url, 'URL' %>
      <%= f_audio.url_field :url, :class => 'title span-17 last' %>
      <%= f_audio.label :is_autoplay, 'Autoplay?' %>
      <%= f_audio.check_box :is_autoplay %>
      <%= f_audio.label :is_visible, 'Visible?' %>
      <%= f_audio.check_box :is_visible %>
    <% end %>
  </fieldset>
</li>
